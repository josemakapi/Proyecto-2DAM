<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANDROID_INFORMES_JMCP.Resources.Styles.BigFontsMode">
    
    <!--Si algún estilo necesita alguna particularidad aparte del tamaño de fuente (como el picker), añadir también aquí-->

    <Style TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        
    </Style>

    <Style TargetType="Entry">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="20" />
        <Setter Property="MinimumHeightRequest" Value="38"/>
        <Setter Property="MinimumWidthRequest" Value="34"/>
    </Style>

</ResourceDictionary>