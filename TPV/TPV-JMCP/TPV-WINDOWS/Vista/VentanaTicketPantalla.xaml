<Window x:Class="TPV_WINDOWS.Vista.VentanaTicketPantalla"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV_WINDOWS.Vista"
        mc:Ignorable="d"
        Title="Ticket" Height="450" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Opacity="0.95" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="imgLogo" Margin="10,10,720,354" Source="{Binding Logo}" Stretch="Fill" Width="64" Height="64"/>
        <Label x:Name="lblEmpresa" Content="{Binding Descripcion}" HorizontalAlignment="Left" Margin="102,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.149,0.254" FontSize="20" FontWeight="ExtraBold"/>


        <Button x:Name="btnCerrar" Content="Cerrar" HorizontalAlignment="Right" Margin="0,0,644,32" VerticalAlignment="Bottom" RenderTransformOrigin="0.458,-0.441" Height="27" Width="54" Click="btnCerrar_Click"/>
        <Label x:Name="lblDatosEmpresa" Content="{Binding OtrosDatos}"  HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
